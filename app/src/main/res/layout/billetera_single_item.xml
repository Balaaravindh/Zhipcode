<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/first_dates"
            android:layout_width="200dp"
            android:layout_height="70dp">

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/datesss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:font="sanz.ttf"
                android:text="01/03/2017"
                android:textSize="16dp"/>


        </RelativeLayout>

        <View
            android:id="@+id/viewsss"
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/first_dates"
            android:background="#C0C0C0" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/viewsss">

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/amount_text"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                app:font="sanz.ttf"
                android:textSize="16dp"
                android:text="900" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:background="#C0C0C0"
        android:layout_below="@+id/category_item"/>

</RelativeLayout>