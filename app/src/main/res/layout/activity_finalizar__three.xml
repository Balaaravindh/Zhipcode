<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.falconnect.zipcode.CommentsActivity">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/zc_logo" />

    </RelativeLayout>

    <com.falconnect.zipcode.CustomWidgets.CustomTextView
        android:id="@+id/felicidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_search_list"
        android:gravity="center"
        android:text="FELICIDADES"
        android:textColor="#000"
        android:textSize="14dp"
        android:textStyle="bold"
        app:Customfont="sanz.ttf" />

    <com.falconnect.zipcode.CustomWidgets.CustomTextView
        android:id="@+id/ganancia_1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/felicidades"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=""
        android:textColor="#F34235"
        android:textSize="18dp"
        android:textStyle="bold"
        app:Customfont="sanz.ttf" />

    <com.falconnect.zipcode.CustomWidgets.CustomTextView
        android:id="@+id/califica_al_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ganancia_1000"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:text="¡Gracias por compartir tu opinión con nosotros!"
        android:textSize="18dp"
        android:textStyle="bold"
        app:Customfont="sanz.ttf" />

    <RelativeLayout
        android:id="@+id/thumb_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#fff">

        <com.falconnect.zipcode.CustomWidgets.ButtonPlus
            android:id="@+id/finalir"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="FINALIZAR"
            android:textColor="#39B54A"
            android:background="@drawable/finalizar"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>
