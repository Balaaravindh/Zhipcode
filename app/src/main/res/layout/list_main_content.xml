<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/category_item"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="#414141">

                <com.falconnect.zipcode.CustomWidgets.CustomTextView
                    android:id="@+id/altamira"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="ALTAMIRA"
                    android:maxLines="2"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    app:font="sanz.ttf"
                    android:textSize="14dp" />

                <com.falconnect.zipcode.CustomWidgets.CustomTextView
                    android:id="@+id/entregas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/altamira"
                    android:layout_alignStart="@+id/altamira"
                    android:layout_below="@+id/altamira"
                    android:text="ENTREGAS"
                    app:font="sanz.ttf"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFF"
                    android:textSize="12dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="#333333">

                <com.falconnect.zipcode.CustomWidgets.CustomTextView
                    android:id="@+id/lacastellana"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="LA CASTELLANA"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    app:font="sanz.ttf"
                    android:textAlignment="textEnd"
                    android:textSize="14dp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle">

                <ImageView
                    android:id="@+id/images_del"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dashboard_one" />

            </RelativeLayout>


            <com.falconnect.zipcode.CustomWidgets.ButtonPlus
                android:id="@+id/button_rate"
                android:layout_height="30dp"
                android:layout_width="80dp"
                android:text="1000"
                android:textColor="#FFF"
                android:background="@drawable/shape_submit"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>