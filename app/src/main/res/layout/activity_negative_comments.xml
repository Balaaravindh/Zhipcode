<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.falconnect.zipcode.CommentsActivity">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/zc_logo" />

    </RelativeLayout>

    <com.falconnect.zipcode.CustomWidgets.CustomTextView
        android:id="@+id/felicidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_search_list"
        android:gravity="center"
        android:text="FELICIDADES"
        android:textColor="#000"
        android:textSize="14dp"
        android:textStyle="bold"
        app:Customfont="sanz.ttf" />

    <com.falconnect.zipcode.CustomWidgets.CustomTextView
        android:id="@+id/ganaste_1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/felicidades"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="GANATE 1000"
        android:textColor="#F34235"
        android:textSize="18dp"
        android:textStyle="bold"
        app:Customfont="sanz.ttf" />

    <com.falconnect.zipcode.CustomWidgets.CustomTextView
        android:id="@+id/califica_al_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ganaste_1000"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Cuéntanos brevemente por qué tu calificación es negativa"
        android:textSize="18dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:Customfont="sanz.ttf" />


    <com.falconnect.zipcode.CustomWidgets.CEditText
        android:id="@+id/enviar_opinion_textbox"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/califica_al_cliente"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        app:Customfont="sanz.ttf"
        android:hint="Tu observación"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/thumb_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:background="#fff">

        <com.falconnect.zipcode.CustomWidgets.ButtonPlus
            android:id="@+id/enviar_opinion"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Enviar opinión"
            android:textColor="#fff"
            android:background="#39B54A"
            app:Customfont="sanz.ttf"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <com.falconnect.zipcode.CustomWidgets.CustomTextView
            android:id="@+id/manifest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MANIFESTO DE ENTREGA"
            android:textSize="18dp"
            android:textStyle="bold"
            app:Customfont="sanz.ttf" />

        <com.falconnect.zipcode.CustomWidgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manifest"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/opcional"
            android:text="(OPCIONAL)"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/camera_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/opcional"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/camera" />

    </RelativeLayout>

</RelativeLayout>
