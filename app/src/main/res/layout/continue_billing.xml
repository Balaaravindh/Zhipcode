<RelativeLayout android:layout_height="match_parent"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#FFF">


        <com.falconnect.zipcode.CustomWidgets.CustomTextView
            android:id="@+id/message"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="iFELICIDADES"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            app:font="sanz.ttf"/>

        <com.falconnect.zipcode.CustomWidgets.CustomTextView
            android:id="@+id/message1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="TU SALDO ACUMULADO SERA DEPOSITADO EN TU CUENTA BANCARIA"
            android:textAlignment="center"
            android:layout_below="@+id/message"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:font="sanz.ttf"/>


        <com.falconnect.zipcode.CustomWidgets.ButtonPlus
            android:id="@+id/possitive_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/message1"
            android:layout_marginTop="10dp"
            android:text="CONTINUAR"
            android:layout_centerHorizontal="true"
            app:font="sanz.ttf"
            android:background="@drawable/custom_alert_postive"/>


    </RelativeLayout>


</RelativeLayout>