<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytPattern"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/blue_color"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:background="#38B2E7">

                <com.falconnect.zipcode.CustomWidgets.CustomTextView
                    android:id="@+id/destination_points_number"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    app:font="sanz.ttf" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/details_address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_toRightOf="@+id/blue_color">

                <com.falconnect.zipcode.CustomWidgets.CustomTextView
                    android:id="@+id/direction_orgin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="DIRECTION ORIGEN"
                    android:textColor="#000"
                    android:textSize="16dp"
                    app:font="sanz.ttf" />

                <com.falconnect.zipcode.CustomWidgets.CustomTextView
                    android:id="@+id/orgin_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/direction_orgin"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Shastiri Nagar, Adayar, Chennai, Tamil Nadu, India, 600 010"
                    android:textSize="14dp"
                    app:font="sanz.ttf" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/buttonsss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/card_destination"
        android:layout_marginRight="5dp">

        <com.falconnect.zipcode.CustomWidgets.ButtonPlus
            android:id="@+id/status_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="#9D9D9D"
            android:text="STATUS"
            android:textColor="#FFF"
            android:textSize="16dp"
            app:font="sanz.ttf" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_button">

            <com.falconnect.zipcode.CustomWidgets.ButtonPlus
                android:id="@+id/listo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="#39B54A"
                android:text="LISTO"
                android:textColor="#FFF"
                android:textSize="16dp"
                app:font="sanz.ttf" />

            <com.falconnect.zipcode.CustomWidgets.ButtonPlus
                android:id="@+id/end_process"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="#FBB03B"
                android:text="END PROCESO"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:visibility="gone"
                app:font="sanz.ttf" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>