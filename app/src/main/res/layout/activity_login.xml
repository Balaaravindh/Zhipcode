<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.falconnect.zipcode.LoginActivity">


    <ImageView
        android:id="@+id/logo_top_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/logo_top_login"
        android:layout_marginTop="3dp"
        android:background="#c0c0c0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view">

        <RelativeLayout
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/tu_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="TU EMAIL"
                android:textSize="16dp"
                android:textStyle="bold"
                app:font="sanz.ttf" />

            <com.falconnect.zipcode.CustomWidgets.CEditText
                android:id="@+id/login_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tu_email"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:hint="YO@GMAIL.COM"
                android:text="Lio69vrb@tohlma.co"
                android:inputType="textEmailAddress"
                android:textSize="22dp"
                app:font="sanz.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_email"
            android:layout_marginTop="5dp">

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/tu_contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="TU CONTRASENA"
                android:textSize="16dp"
                android:textStyle="bold"
                app:font="sanz.ttf" />

            <com.falconnect.zipcode.CustomWidgets.CEditText
                android:id="@+id/passwrd_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tu_contrasena"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:hint="CONTRASENA"
                android:text="12345678"
                android:inputType="textPassword"
                android:textSize="22dp"
                app:font="sanz.ttf" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_password"
            android:layout_marginTop="20dp">


            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¿OLVIDASTE TU CONTRASENA?"
                android:textColor="#FA2608"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                app:font="sanz.ttf"/>

            <com.falconnect.zipcode.CustomWidgets.ButtonPlus
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="INICIAR SESION"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/forgot_password"
                android:background="@drawable/splash_button_create"
                android:textColor="#FFF" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
