<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.falconnect.zipcode.CommentsActivity">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/header_search_list"
        android:background="#C0C0C0"/>

    <com.falconnect.zipcode.CustomWidgets.CustomTextView
        android:id="@+id/ganancia_1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_search_list"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="GANACIA 1000"
        android:textColor="#FA2608"
        android:textSize="18dp"
        android:textStyle="bold"
        app:Customfont="sanz.ttf" />

    <com.falconnect.zipcode.CustomWidgets.CustomTextView
        android:id="@+id/califica_al_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ganancia_1000"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="CALIFICAL AL CLIENTE"
        android:textSize="18dp"
        android:textStyle="bold"
        app:Customfont="sanz.ttf" />

    <RelativeLayout
        android:id="@+id/thumb_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/califica_al_cliente"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/ranking_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/image_thumbsup"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/like" />

            <ImageView
                android:id="@+id/image_thumbsdown"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/dislike" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumb_image">

        <com.falconnect.zipcode.CustomWidgets.CustomTextView
            android:id="@+id/manifest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MANIFESTO DE ENTREGA"
            android:textSize="18dp"
            android:textStyle="bold"
            app:Customfont="sanz.ttf" />

        <com.falconnect.zipcode.CustomWidgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manifest"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/opcional"
            android:text="(OPCIONAL)"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/camera_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/opcional"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/camera" />

    </RelativeLayout>

</RelativeLayout>
