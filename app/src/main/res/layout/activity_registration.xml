<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.falconnect.zipcode.RegistrationActivity">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/header_search_list"
        android:background="#000"
        android:layout_marginTop="5dp">


        <com.falconnect.zipcode.CustomWidgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="REGISTRO PASO 1"
            app:font="sanz.ttf"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="18dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textbox_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/register_text"
        android:background="#414141">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp">

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/tu_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TU NUMERO DE TELEFONO"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                app:font="sanz.ttf"
                android:textColor="#FFF"
                android:gravity="center"/>

            <com.falconnect.zipcode.CustomWidgets.CEditText
                android:id="@+id/regist_telephone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:maxLength="13"
                android:inputType="number"
                android:hint="123456789"
                android:layout_marginTop="40dp"/>

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/al_register"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="AL REGITRARTE ACEPTAS NUESTROS"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#FFF"
                app:font="sanz.ttf"
                android:layout_marginBottom="5dp"
                android:layout_above="@+id/terms" />

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/terms"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="TERMINOS Y CONDICIONES"
                android:gravity="center"
                android:textSize="12dp"
                app:font="sanz.ttf"
                android:textColor="#FFF"
                android:layout_above="@+id/confirm_button" />

            <com.falconnect.zipcode.CustomWidgets.ButtonPlus
                android:id="@+id/confirm_button"
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:text="CONFIRMAR"
                app:font="sanz.ttf"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:background="#FFF"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
