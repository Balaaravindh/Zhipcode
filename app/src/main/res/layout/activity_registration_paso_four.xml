<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration_paso_four"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.falconnect.zipcode.RegistrationPasoFour">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/header_search_list"
        android:background="#000"
        android:layout_marginTop="5dp">


        <com.falconnect.zipcode.CustomWidgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="REGISTRO PASO 4"
            app:font="sanz.ttf"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="18dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textbox_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/register_text"
        android:background="#414141">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="40dp">

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/tu_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TU NOMBRE"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                app:font="sanz.ttf"
                android:textColor="#FFF"
                android:gravity="center"/>

            <com.falconnect.zipcode.CustomWidgets.CEditText
                android:id="@+id/tu_nombre_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:hint="ADONAY"
                android:layout_marginTop="40dp"/>

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/tu_apaellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TU NOMBRE"
                android:textSize="16dp"
                android:layout_below="@+id/tu_nombre_text"
                android:layout_marginTop="10dp"
                app:font="sanz.ttf"
                android:textColor="#FFF"
                android:gravity="center"/>

            <com.falconnect.zipcode.CustomWidgets.CEditText
                android:id="@+id/tu_apaellido_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tu_apaellido"
                android:textColor="#FFF"
                android:hint="LIZARDO"
                android:layout_marginTop="10dp"/>


            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/tu_rut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TU RUT"
                android:textSize="16dp"
                android:layout_below="@+id/tu_apaellido_text"
                android:layout_marginTop="10dp"
                app:font="sanz.ttf"
                android:textColor="#FFF"
                android:gravity="center"/>

            <com.falconnect.zipcode.CustomWidgets.CEditText
                android:id="@+id/tu_rut_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tu_rut"
                android:textColor="#FFF"
                android:inputType="number"
                android:hint="20322863"
                android:layout_marginTop="10dp"/>


            <com.falconnect.zipcode.CustomWidgets.ButtonPlus
                android:id="@+id/confirm_guardar"
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:layout_below="@+id/tu_rut_text"
                android:text="GUARDAR"
                app:font="sanz.ttf"
                android:textColor="#000"
                android:background="#FFF"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
