<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrarion_five_paso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.falconnect.zipcode.RegistrarionFivePaso">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/header_search_list"
        android:layout_marginTop="5dp"
        android:background="#000">


        <com.falconnect.zipcode.CustomWidgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="REGISTRO PASO 5"
            android:textColor="#FFF"
            android:textSize="18dp"
            app:font="sanz.ttf" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/textbox_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/register_text"
        android:background="#C0C0C0">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="40dp">

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/tu_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="SELECCIONA TU BANCO"
                android:textColor="#FFF"
                android:textSize="16dp"
                app:font="sanz.ttf" />

            <FrameLayout
                android:id="@+id/bank_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tu_nombre">


                <com.falconnect.zipcode.CustomWidgets.CustomTextView
                    android:id="@+id/bank_name"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Sample"
                    android:textColor="#FFF"
                    app:font="sanz.ttf"
                    android:textAllCaps="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/bank"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal" />

            </FrameLayout>

            <View
                android:id="@+id/vire"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_below="@+id/bank_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="#FFF" />

            <com.falconnect.zipcode.CustomWidgets.CustomTextView
                android:id="@+id/tu_apaellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vire"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="ESCRIBE TU NRO DE CUENTA"
                android:textColor="#FFF"
                android:textSize="16dp"
                app:font="sanz.ttf" />

            <com.falconnect.zipcode.CustomWidgets.CEditText
                android:id="@+id/tu_apaellido_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tu_apaellido"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="0115458924752945"
                android:inputType="number"
                android:maxLength="14"
                android:textColor="#FFF" />


            <com.falconnect.zipcode.CustomWidgets.ButtonPlus
                android:id="@+id/confirm_guardar_five"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tu_apaellido_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#FFF"
                android:text="GUARDAR"
                android:textColor="#000"
                android:textSize="16dp"
                app:font="sanz.ttf" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
